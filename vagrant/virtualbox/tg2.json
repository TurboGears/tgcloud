{
    "variables": {
        "ssh_name": "vagrant",
        "ssh_pass": "vagrant",
        "hostname": "turbogears",
	"cloud_token": "",
	"version": ""
    },
    
    "builders": [{
        "type": "virtualbox-iso",
        "guest_os_type": "Ubuntu_64",

        "vboxmanage": [
            ["modifyvm", "{{.Name}}", "--audio", "none"],
	    ["modifyvm", "{{.Name}}", "--cpus", "1"],
	    ["modifyvm", "{{.Name}}", "--memory", "512"],
	    ["modifyvm", "{{.Name}}", "--usb", "off"],
	    ["modifyvm", "{{.Name}}", "--usbehci", "off"],
            ["modifyvm", "{{.Name}}", "--vram", "32"],
	    ["modifyvm", "{{.Name}}", "--natpf1", "turbogears,tcp,,8080,,8080"]
        ],
	
        "disk_size" : 40000,

        "iso_url": "input/ubuntu-15.04-server-amd64.iso",
        "iso_checksum": "487f4a81f22f8597503db3d51a1b502e",
        "iso_checksum_type": "md5",

        "http_directory" : ".",
        "http_port_min" : 9001,
        "http_port_max" : 9001,

	"output_directory": "tg2-ubuntu",
        "ssh_username": "{{user `ssh_name`}}",
        "ssh_password": "{{user `ssh_pass`}}",
        "ssh_wait_timeout": "90m",

        "shutdown_command": "echo {{user `ssh_pass`}} | sudo -S shutdown -P now",

        "boot_command" : [
            "<esc><esc><enter><wait>",
            "/install/vmlinuz noapic ",
            "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/virtualbox/preseed.cfg ",
            "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
            "hostname={{user `hostname`}} ",
            "fb=false debconf/frontend=noninteractive ",
            "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
            "keyboard-configuration/variant=USA console-setup/ask_detect=false ",
            "initrd=/install/initrd.gz -- <enter>"
        ]
    }],
    
    "provisioners": [
	{
	    "type": "file",
	    "source": "virtualbox/tginst",
	    "destination": "/tmp/tginst"
	},
	{
	    "type": "file",
	    "source": "virtualbox/vagrant.pub",
	    "destination": "/tmp/vagrant.pub"
	},
	{
	    "type": "file",
	    "source": "virtualbox/pypkgs",
	    "destination": "/tmp/pypkgs"
	},
	{
	    "type": "file",
	    "source": "virtualbox/vagrant-cleanup",
	    "destination": "/tmp/vagrant-cleanup"
	},
	{
	    "type": "shell",
	    "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
	    "inline": [
		"chmod +x /tmp/vagrant-cleanup",
		"/tmp/vagrant-cleanup",
		"rm /tmp/vagrant-cleanup"
	    ]
	}
    ],

    "post-processors": [
	[
	    {
		"type": "vagrant",
		"output" : "output/tg2-ubuntu.box",
		"vagrantfile_template": "virtualbox/vagrantfile_template"
	    },
	    {
		"type": "vagrant-cloud",
		"box_tag": "turbogears/tg2-ubuntu",
		"keep_input_artifact": true,
		"access_token": "{{user `cloud_token`}}",
		"version": "2.3.5.0",
		"version_description": "Upgrade Ubuntu to 15.04. Upgrade TurboGears to 2.3.5."
	    }
	]
    ]    
}
