{
    "variables": {
        "ssh_name": "vagrant",
        "ssh_pass": "vagrant",
        "hostname": "turbogears"
    },
    
    "post-processors": [{
	"type": "vagrant",
	"output" : "output/turbogears2-postgres.box",
	"vagrantfile_template": "virtualbox/vagrantfile_template"
    }],

    "provisioners": [
	{
	    "type": "file",
	    "source": "virtualbox/tginst",
	    "destination": "/tmp/tginst"
	},
	{
	    "type": "file",
	    "source": "virtualbox/vagrant.pub",
	    "destination": "/tmp/vagrant.pub"
	},
	{
	    "type": "file",
	    "source": "virtualbox/pypkgs",
	    "destination": "/tmp/pypkgs"
	},
	{
	    "type": "shell",
	    "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
	    "inline": [
		"echo Installing VirtualBox Guest Additions...",
		"mount -o loop /home/vagrant/VBoxGuestAdditions.iso /mnt",
		"bash /mnt/VBoxLinuxAdditions.run",
		"umount /mnt",
		"rm /home/vagrant/VBoxGuestAdditions.iso"
	    ]
	},
	{
	    "type": "shell",
	    "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
	    "inline": [
		"echo Download Turbogears packages...",
		"mv /tmp/tginst /usr/local/bin/tginst",
		"mkdir -p /opt/tgcache",
		"mv /tmp/pypkgs /opt/tgcache/pypkgs",
		"pip3 install --download /opt/tgcache `cat /opt/tgcache/pypkgs`",
		"chmod -R 0755 /opt/tgcache /usr/local/bin/tginst",
		"sudo -u vagrant /usr/local/bin/tginst"
	    ]
	},
	{
	    "type": "shell",
	    "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
	    "inline": [
		"echo preparing vagrant user...",
		"mkdir -p /home/vagrant/.ssh",
		"mv /tmp/vagrant.pub /home/vagrant/.ssh/authorized_keys",
		"chmod 0700 /home/vagrant/.ssh",
		"chmod 0600 /home/vagrant/.ssh/authorized_keys",
		"chown -R vagrant:vagrant /home/vagrant/.ssh"
	    ]
	},
	{
	    "type": "shell",
	    "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
	    "inline": [
		"echo Setting root permissions",
		"echo 'vagrant ALL=(ALL) NOPASSWD: ALL' >>/etc/sudoers",
		"echo 'root:vagrant' | chpasswd"
	    ]
	},
	{
	    "type": "shell",
	    "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
	    "inline": [
		"echo Configuring SSH",
		"echo 'UseDNS no' >> /etc/ssh/sshd_config"
	    ]
	},
	{
	    "type": "shell",
	    "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
	    "inline": [
		"echo removing excess packages",
		"aptitude -y purge apparmor bash-completion brasero checkbox-gui checkbox-ng checkbox-ng-service command-not-found command-not-found-data deja-dup-backend-gvfs dmidecode eject fakeroot gnome-disk-utility gvfs gvfs-backends gvfs-daemons gvfs-fuse laptop-detect mtr-tiny nautilus nautilus-sendto nautilus-share network-manager-pptp network-manager-pptp-gnome ntfs-3g os-prober parted plainbox-provider-checkbox plainbox-provider-resource-generic pm-utils popularity-contest powermgmt-base ppp pppconfig pppoeconf pptp-linux python-commandnotfound python3-commandnotfound python3-checkbox-ng python3-checkbox-support rsync sessioninstaller software-center tasksel tasksel-data tcpdump telnet ubuntu-desktop ubuntu-minimal ubuntu-standard udisks2 usb-creator-common usb-creator-gtk",
		"aptitude clean"
	    ]
	},
	{
	    "type": "shell",
	    "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
	    "inline": [
		"echo zeroing drive...",
		"dd if=/dev/zero of=/zeros bs=1M",
		"rm /zeros"
	    ]
	}
    ],
    
    "builders": [{
        "type": "virtualbox-iso",
        "guest_os_type": "Ubuntu_64",

        "vboxmanage": [
            ["modifyvm", "{{.Name}}", "--audio", "none"],
	    ["modifyvm", "{{.Name}}", "--cpus", "1"],
	    ["modifyvm", "{{.Name}}", "--memory", "512"],
	    ["modifyvm", "{{.Name}}", "--usb", "off"],
	    ["modifyvm", "{{.Name}}", "--usbehci", "off"],
            ["modifyvm", "{{.Name}}", "--vram", "32"],
	    ["modifyvm", "{{.Name}}", "--natpf1", "turbogears,tcp,,8080,,8080"]
        ],
	
        "disk_size" : 40000,

        "iso_url": "input/ubuntu-14.10-server-amd64.iso",
        "iso_checksum": "91bd1cfba65417bfa04567e4f64b5c55",
        "iso_checksum_type": "md5",

        "http_directory" : ".",
        "http_port_min" : 9001,
        "http_port_max" : 9001,

	"output_directory": "turbogears2-postgres",
        "ssh_username": "{{user `ssh_name`}}",
        "ssh_password": "{{user `ssh_pass`}}",
        "ssh_wait_timeout": "90m",

        "shutdown_command": "echo {{user `ssh_pass`}} | sudo -S shutdown -P now",

        "boot_command" : [
            "<esc><esc><enter><wait>",
            "/install/vmlinuz noapic ",
            "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/virtualbox/preseed.cfg ",
            "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
            "hostname={{user `hostname`}} ",
            "fb=false debconf/frontend=noninteractive ",
            "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
            "keyboard-configuration/variant=USA console-setup/ask_detect=false ",
            "initrd=/install/initrd.gz -- <enter>"
        ]
    }]
}
